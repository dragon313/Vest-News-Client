<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.vest_news.vest_news_app">

    <permission
        android:name="ru.vest_news.vest_news_app.PRIVATE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="ru.vest_news.vest_news.PRIVATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="ru.vest_news.vest_news_app.application.App"
        android:supportsRtl="true"
        android:theme="@style/myTheme">
        <activity
            android:name="ru.vest_news.vest_news_app.ui.NewsListActivity"
            android:launchMode="singleInstance">

        </activity>
        <activity
            android:name="ru.vest_news.vest_news_app.ui.NewsDetailActivity"
            android:parentActivityName="ru.vest_news.vest_news_app.ui.NewsListActivity">
        </activity>

        <service android:name="ru.vest_news.vest_news_app.network.NewsService"/>

        <receiver android:name="ru.vest_news.vest_news_app.network.StartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="ru.vest_news.vest_news_app.network.NotificationReceiver"
            android:exported="false">
            <intent-filter android:priority="-999">
                <action android:name="ru.vest_news.vest_news.SHOW_NOTIFICATION"/>
            </intent-filter>
        </receiver>

        <activity
            android:name="ru.vest_news.vest_news_app.ui.SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>