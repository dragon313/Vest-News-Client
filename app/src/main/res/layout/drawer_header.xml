<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="160dp"
    android:paddingTop="@dimen/spacing_medial_24"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/md1">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/md2"
        android:layout_marginTop="@dimen/spacing_normal_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/d_h_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Title"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/d_h_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Description"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>